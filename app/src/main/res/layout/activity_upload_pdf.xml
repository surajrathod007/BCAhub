<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/gredient1"
tools:context=".upload_pdf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:elevation="10dp"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:minHeight="?attr/actionBarSize"
                android:background="@drawable/notes_background"
                app:titleTextColor="@color/black"
                android:elevation="5dp"

                app:layout_scrollFlags="scroll|enterAlways"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <!--
                <WebView
                    android:layout_marginTop="56dp"
                    android:id="@+id/contentView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                    -->



    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText

                android:textColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:textColorHighlight="@color/white"
                android:id="@+id/edittitle"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter title"
                android:inputType="textPersonName" />

            <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/editdesc"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/editsem"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter sem"
                android:inputType="textPersonName" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/editsub"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Sub"
                android:inputType="textPersonName" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/editulink"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Pdf Preview Link"
                android:inputType="textPersonName" />

            <TextView

                android:layout_margin="10dp"
                android:text="Select Image for pdf"
                android:textColor="#293559"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSelectImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@drawable/gredient2">


            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:id="@+id/imgPrev"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/code"

                />

            <TextView
                android:text="Select Pdf to upload "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#293559"
                android:textSize="25sp"
                android:layout_margin="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSelectPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Pdf"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/gredient2"
                android:layout_margin="10dp"
                >


            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:id="@+id/noFile"
                android:text="No File IS Selected "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Pdf"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/gredient4"
                android:layout_margin="10dp"
                >



            </androidx.appcompat.widget.AppCompatButton>













        </LinearLayout>




    </ScrollView>




</androidx.drawerlayout.widget.DrawerLayout>

